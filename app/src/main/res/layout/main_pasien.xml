<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".Pasien">

    <ImageButton
        android:id="@+id/button_telfonDarurat"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@null"
        app:srcCompat="@drawable/gambar_emergencycall" />

    <ImageButton
        android:id="@+id/button_alert"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_telfonDarurat"
        android:layout_centerHorizontal="true"
        android:background="@null"
        app:srcCompat="@drawable/gambar_alert" />

    <ImageButton
        android:id="@+id/button_alarm"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_alert"
        android:layout_centerHorizontal="true"
        android:background="@null"
        app:srcCompat="@drawable/gambar_alarm" />

</RelativeLayout>