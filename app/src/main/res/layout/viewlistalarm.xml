<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/LL_viewlistpasien"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_listalarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="#F1F1F1"
        android:layout_margin="20dp"
        android:clickable="true"
        app:cardCornerRadius="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">


        <TextView
            android:id="@+id/tv_ket_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Makan siang"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center">
        </TextView>

            <LinearLayout
                android:id="@+id/LL_listalarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_waktu_alarm"
                    android:text="08:00"
                    android:textSize="40sp">

                </TextView>
                    <TimePicker
                        android:id="@+id/tp_setAlarm"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:timePickerMode="spinner">

                    </TimePicker>

                </FrameLayout>



                <ImageButton
                    android:id="@+id/btn_set_alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:src="@drawable/ic_baseline_check_24"></ImageButton>

                <ImageButton
                    android:id="@+id/btn_settings_alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:src="@drawable/ic_baseline_settings_24"></ImageButton>

                <ImageButton
                    android:id="@+id/btn_deletealarm"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@null"
                    android:src="@drawable/ic_baseline_delete_24">

                </ImageButton>

            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>

