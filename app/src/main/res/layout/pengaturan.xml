<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/LL_viewtelfonEmergency"
    tools:context=".PengaturanActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_kontakEmergency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="#F1F1F1"
        android:layout_margin="20dp"
        android:clickable="true"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:id="@+id/LL_kontakEmergency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/asd"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="5dp">


            <TextView
                android:id="@+id/tv_namaKontak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nomor Darurat"
                android:textSize="20sp"
                android:textColor="#000000"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/qwe"
                android:text="081234567890"

                />


            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_settingsND"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:src="@drawable/ic_baseline_settings_24">
            </ImageButton>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="#F1F1F1"
        android:layout_margin="20dp"
        android:clickable="true"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:id="@+id/LL_alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="5dp">


                <TextView
                    android:id="@+id/tv_alarm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alarm"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_settingsA"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:src="@drawable/ic_baseline_settings_24">
            </ImageButton>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID PASIEN"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#000000">

        </TextView>

        <TextView
            android:id="@+id/tv_idPasien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asd"
            android:textSize="27sp"
            android:layout_gravity="center">

        </TextView>
    </LinearLayout>


</LinearLayout>
